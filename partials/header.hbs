{{#if @blog.cover }}
	<div role='banner' class="header_magnum" style="background-image:url('{{@blog.cover}}')">
		{{#if @blog.logo}}
		<a class="logo_magnum" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>
		{{/if}}
		<h1 class="blogtitle_magnum">
			<a title="{{@blog.title}}" href='{{@blog.url}}'>
				<img src='{{asset "img/memgo-logotype.png"}}' style="top:30px;position:relative;" />
			</a>
		</h1>
	</div>
{{ else }}
	<div role='banner' class="header_magnum">
		{{#if @blog.logo}}
		<a class="logo_magnum" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>
		{{/if}}
		<h1 class="blogtitle_magnum">
			<a title="{{@blog.title}}" href='{{@blog.url}}'>
				<img src='{{asset "img/memgo-logotype.png"}}' style="top:30px;position:relative;" />
			</a>
		</h1>
	</div>
{{/if}}
